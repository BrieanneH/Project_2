<div class="row bg-info">
    <div class="col-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <h2>Welcome <span class="member-name"></span></h2>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-4">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label class="input-group-text" for="nutrientInputGroup">Nutrients</label>
            </div>
            <select class="custom-select" id="nutrientInputGroup">
                <option selected>Choose Nutrient...</option>
                <!--  This is where the Nutrient option divs will be rendered when the page is loaded-->
            </select>
        </div>
    </div>
    <div class="col-4"></div>
    <div class="col-4">
        <button class="btn btn-secondary btn-large col-4" type="button" id="searchButton">
            Search for Recipes
        </button>
    </div>
</div>
<div class="row">
    {{#each recipe}}
    <div class="col-4 text-center">
        <div class="card" style="width: 18rem;">
            <img src={{recipe.image}} class="card-img-top" alt="Yummy">
            <div class="card-body">
                <h5 class="card-title">{{recipe.label}}</h5>

                <ul>
                    {{#each recipe.ingredientLines}}
                    <li>{{this}}</li>
                    {{/each}}
                    <ul>
                        {{!-- <ul>
                        {{#each recipe.digest}}
                        <li>{{this}}</li>
                        {{/each}}
                    <ul> --}}
                        <a href={{recipe.url}} class="btn btn-primary">Click here for how to make this!</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>